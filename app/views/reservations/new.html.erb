<h1>Make a Reservation</h1>
<%= form_with model: @reservation do |form| %>
  <div>
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>
  <div>
    <%= form.label :room_id %>
    <%= form.text_field :room_id %>
  </div>
  <div>
    <%= form.label :start_date_MM_DD_YYYY %>
    <%= form.text_field :start_date_ %>
  </div>
  <div>
    <%= form.label :end_date_MM_DD_YYYY %>
    <%= form.text_field :end_date%>
  </div>
  <div>
    <%= form.label :stay_length %>
    <%= form.text_field :stay_length %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<a href="/rooms">Back to all rooms</a>
